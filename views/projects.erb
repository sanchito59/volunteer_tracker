<h1>Volunteery</h1>
<hr>

<h3>Current Projects</h3>
<hr>


<form action="/projects" method="get">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-info">Search</button>
</form>
<form action="/projects" method="get">
  <button type="submit" name="sort" class="btn sort-button">A-Z <i class="fas fa-sort"></i>
</button>
</form>
<% if @projects.any? %>
  <ul>
    <% @projects.each do |project| %>
      <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
    <% end %>
  </ul>
  <a href="/projects/new" class="navigation-link">Add a new project</a>
<% else %>
  <p>There are currently no projects.</p>
  <a href="/projects/new" class="navigation-link">Let's set one up!</a>
<% end %>
