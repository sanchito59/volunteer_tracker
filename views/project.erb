<h1>Volunteery <i class="fas fa-hands-helping"></i>
</h1>
<h2>Project: <%= @project.title %></h2>

<h3>Registered Volunteers: </h3>

  <% if @project.volunteers.length > 0 %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
        <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no volunteers listed for this project yet.</p>
    <hr>
  <% end %>

<h5>Add a volunteer:</h5>

<form action="/projects/<%= @project.id %>" method="post">
  <div class="form-group">
    <label for="volunteer_name">Volunteer name: </label>
    <input id="volunteer_name" name="volunteer_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn" id='create-or-add-button'>Add Volunteer</button>
</form>

<p><a href="/projects/<%= @project.id %>/edit">Edit project</a></p>
<p><a href="/projects" class="navigation-link">View All Projects</a></p>