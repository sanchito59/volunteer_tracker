<h1>Volunteery <i class="fas fa-hands-helping"></i></h1>
<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @volunteer.project.title %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="volunteer_name">Rename Volunteer</label>
  <input id="volunteer_name" name="volunteer_name" type="text">
  <button type="submit" class="btn btn-success">Update Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.title %></a>
<h4><a href="/projects" class="navigation-link">Return home!</h4>